<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/panel_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <!--
    <com.etsy.android.grid.util.DynamicHeightImageView
        android:id="@+id/ivImage"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"/>

    -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivImage"
        android:src="@drawable/taptapchat"
        android:scaleType="fitCenter"
        android:background="@drawable/border"
        android:adjustViewBounds="true"
        android:layout_weight="0.78" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/heart"/>

        <TextView
            android:id="@+id/tvLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:text="8"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/chat"/>

        <TextView
            android:id="@+id/tvChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:text="18"/>

        <ImageButton
            android:id="@+id/ibWatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/watch"/>

        <TextView
            android:id="@+id/tvWatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:text="12"/>

        <ImageButton
            android:id="@+id/ibMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mail"/>

        <TextView
            android:id="@+id/tvMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:text="5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAdInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New car"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/greenEnabled"/>

        <TextView
            android:id="@+id/tvAdTitlePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New car"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/textBlack"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAdTitleOwnerImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/taptapchat"/>

        <ImageView
            android:id="@+id/ivPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/phone"/>

        <TextView
            android:id="@+id/tvAdSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textColor="@color/textBlack"/>

    </LinearLayout>


</FrameLayout>
