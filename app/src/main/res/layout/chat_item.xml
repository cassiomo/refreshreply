<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rlivLeft"
        android:layout_width="64dp"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/ivProfileLeft"
            android:contentDescription="@string/profile_other"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/taptapchat" />

        <TextView
            android:id="@+id/tvChatLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="bottom|center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/greenEnabled"/>

    </RelativeLayout>
    <!--
    <ImageView
        android:id="@+id/ivProfileLeft"
        android:contentDescription="@string/profile_other"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/taptapchat" />
    -->

    <TextView
        android:textSize="20sp"
        android:id="@+id/tvBody"
        android:lines="3"
        android:textStyle="bold"
        android:layout_marginRight="64dp"
        android:layout_width="match_parent"
        android:layout_height="64dp">
    </TextView>

    <RelativeLayout
        android:id="@+id/rlivRight"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="-64dp">

        <ImageView
            android:id="@+id/ivProfileRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/profile_me"
            android:src="@drawable/taptapchat" />

        <TextView
            android:id="@+id/tvChatRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="bottom|center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/greenEnabled"/>

    </RelativeLayout>
</LinearLayout>
